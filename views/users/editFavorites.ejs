<% layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/stylesheets/editfavorites.css">

<div id="title" class="mb-3 py-3 text-center">
    <h1 class="text-center mb-3">Edit Favorites Page</strong>
    </h1>

    <button id="btn" class="btn"><a class="btn btn-block text-light" href="/favorites">Back to Favorites</a></button>
    <h3 class="mt-3">Don't want certain restaurants? Click below to remove them!</h3>

</div>

<div class="container mb-4">

    <form action="/favorites?_method=PUT" method="POST">

        <div class="row">
            <% for(let i = 0; i < user.favorites.length; i++) { %>


            <% if(user.favorites.length <= 2) {%>
            <div class="col-md-6">
                <div class="card shadow my-4 text-center">
                    <% if(!user.favorites[i].featured_image) { %>
                    <img class="card-img-top"
                        src="https://images.unsplash.com/photo-1515669097368-22e68427d265?ixlib=rb-1.2.1&ixid=MXwxMjA3fDB8MHxzZWFyY2h8Mnx8cmVzdGF1cmFudHN8ZW58MHwwfDB8&auto=format&fit=crop&w=900&q=60"
                        alt="">
                    <% }%>
                    <img src="<%=user.favorites[i].featured_image%>" alt="" class="card-img-top">
                    <div class="card-body">
                        <h3 class="card-title"><%=user.favorites[i].name%></h3>
                        <p class="card-text"><strong>Rating:</strong> <%=user.favorites[i].averageRating%></p>
                    </div>
                    <button class="btn btn-danger" value="<%=user.favorites[i]._id%>" name="id">Remove from
                        favorites</button>
                </div>

            </div>



            <% } else {%>
            <div class="col-md-4">
                <div class="card shadow my-4">
                    <% if(!user.favorites[i].featured_image) { %>
                    <img id=" blah" class="card-img-top"
                        src="https://images.unsplash.com/photo-1515669097368-22e68427d265?ixlib=rb-1.2.1&ixid=MXwxMjA3fDB8MHxzZWFyY2h8Mnx8cmVzdGF1cmFudHN8ZW58MHwwfDB8&auto=format&fit=crop&w=900&q=60"
                        alt="">
                    <% } %>
                    <img src="<%=user.favorites[i].featured_image%>" alt="" class="card-img-top">
                    <div class="card-body">
                        <h3 class="card-title"><%=user.favorites[i].name%></h3>
                        <p class="card-text"><strong>Rating:</strong> <%=user.favorites[i].averageRating%></p>
                    </div>
                    <button class="btn btn-danger" value="<%=user.favorites[i]._id%>" name="id">Remove from
                        favorites</button>
                </div>

            </div>
            <% } %>
            <% } %>
        </div>
    </form>
</div>
