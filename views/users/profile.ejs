<% layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/stylesheets/profile.css">


<div class="container mt-5">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card shadow">
                <div class="background  border-bottom">
                    <h1 class="text-center py-3">Profile</h1>
                    <button class=" btn-block btn"><a class=" btn btn-block text-light" href="/profile/edit">Edit Profile</a></button>
                </div>
             
                
                <div class="card-body">
                    <div class="card-text">
                        <h5>Username: <%=user.username%></h5>
                        <p>Email: <%=user.email%></p>
                    </div>
                    <h5 class="pt-3 border-top">Address:</h5>
                    <div class="card-text">
                        <p>Street: <%=user.address.street%></p>
                        <p>Postal Code: <%=user.address.postalCode%></p>
                        <p>City: <%=user.address.city%></p>
                        <p>State: <%=user.address.state%></p>
                        <p>Country: <%=user.address.country%></p>
                    </div>

                </div>

            </div>
        </div>
    </div>
</div>
