<% layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/stylesheets/profile.css">

<div class="container mt-5">
    <div class="row">
        <div class="col-8 offset-2">
            <div class="card shadow">
                    <div class="background  border-bottom">
                        <h1 class="text-center py-3">Edit Profile</h1>
                        <button class=" btn-block btn"><a class=" btn btn-block text-light" href="/profile">Back to Profile</a></button>
                    </div>

                </button>
                <form action="/profile?_method=PUT" method="POST">

                    <div class="card-body">

                        <div class="card-text">
                            <h5>Username: <%=user.username%></h5>
                            <p>Email: <%=user.email%></p>
                        </div>
                        <h5 class="pt-3 border-top">Address:</h5>
                        <div>
                            <label for="street" name="street">Street:</label>
                            <input type="text" name="street" placeholder="<%=user.address.street%>" required>
                        </div>
                        <div class="mt-2">
                            <label for="street" name="city">City:</label>
                            <input type="text" name="city" minlength="4" placeholder="<%=user.address.city%>" required>

                        </div>

                        <div class="mt-2">
                            <label for="postalCode" name="postalCode">Postal Code:</label>
                            <input type="text" name="postalCode" minlength="6" maxlength="7"
                                placeholder="<%=user.address.postalCode%>">
                        </div>

                        <div class="mt-2">
                            <label for="form-label" class="">State:</label>
                            <select name="state" id="stateSelect" class="mb-3">
                                <option value="AB">Alberta</option>
                                <option value="BC">British Columbia</option>
                                <option value="MB">Manitoba</option>
                                <option value="NB">New Brunswick</option>
                                <option value="NL">Newfoundland and Labrador</option>
                                <option value="NT">Northwest Territories</option>
                                <option value="NS">Nova Scotia</option>
                                <option value="NU">Nunavut</option>
                                <option value="ON">Ontario</option>
                                <option value="PE">Prince Edward Island</option>
                                <option value="QC">Quebec</option>
                                <option value="SK">Saskatchewan</option>
                                <option value="YT">Yukon</option>
                            </select>
                        </div>

                        <div class="">
                            <label for="form-label" class="">Country:</label>
                            <select name="country" id="stateSelect" class="mb-3">
                                <option value="CA">Canada</option>
                                <option value="US">United States</option>
                            </select>
                        </div>

                    </div>
                    <button id="submit" class="btn btn-block"><a class="btn text-light">Save Changes</a></button>
                </form>

            </div>
        </div>
    </div>
</div>
