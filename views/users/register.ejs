<% layout('layouts/boilerplate') %>
        <link rel="stylesheet" href="/stylesheets/register.css">

<div class="container d-flex-justify-content-center align-items-center my-5">
    <div class="row">
        <div class="col-sm-12 col-md-6 offset-md-3 col-xl-6">
            <div class="card shadow">
                <img src="https://images.unsplash.com/photo-1472393365320-db77a5abbecc?ixlib=rb-1.2.1&ixid=MXwxMjA3fDB8MHxzZWFyY2h8MTB8fGZvb2RpZXxlbnwwfDB8MHw%3D&auto=format&fit=crop&w=500&q=60"
                    alt="" class="card-img-top">
                <div class="card-body">
                    <h3 class="card-title text-center mb-3">Register</h3>
                    <form class="validated-form" action="/register" method="POST" novalidate>
                        <div class="mb-3">
                            <label for="form-label" for="username">Username</label>
                            <input type="text" class="form-control" id="username" name="username" required autofocus>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="form-label" for="email">Email</label>
                            <input type="email" class="form-control" id="email" name="email" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="form-label" for="password">Password</label>
                            <input type="password" class="form-control" id="password" name="password" minlength="8" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <button class="btn btn-success btn-block">Register</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
