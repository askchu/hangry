<% layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/stylesheets/register.css">
<div id="backgroundImg" class="py-5">
    <div class="container my-5">
        <div class="card shadow">
            <div id="" class="row">
                <div class="col-sm-12 col-md-12 text-center">
                    <div class="" id="img">
                        <img src="https://images.unsplash.com/photo-1472393365320-db77a5abbecc?ixlib=rb-1.2.1&ixid=MXwxMjA3fDB8MHxzZWFyY2h8MTB8fGZvb2RpZXxlbnwwfDB8MHw%3D&auto=format&fit=crop&w=900&q=60"
                            alt="" class="p-2 img-fluid">
                    </div>

                </div>
            </div>

            <!-- TODO: Fix form -->

            <form class="validated-form" action="/register" method="POST" novalidate>
                <div class="card-body pt-0">
                    <div class="row">
                        <h3 class="card-title text-center mb-3 border-bottom py-3">Register</h3>
                        <div class="col-sm-6 col-md-6">



                            <div class="mb-3">
                                <label for="form-label" for="username">Username</label>
                                <input type="text" class="form-control" id="username" name="username" minlength="4"
                                    autofocus>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                            <div class="mb-3">
                                <label for="form-label" for="email">Email</label>
                                <input type="email" class="form-control" id="email" name="email" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                            <div class="mb-3">
                                <label for="form-label" for="password">Password</label>
                                <input type="password" class="form-control" id="password" name="password" minlength="4">
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                        </div>

                        <div class="col-sm-6 col-md-6">
                            <div class="mb-3">
                                <label for="form-label">Address</label>
                                <input type="text" class="form-control" id="text" name="address" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-6">
                                    <label for="form-label" for="city">City:</label>
                                    <input type="text" class="form-control btn-block" id="city" name="city">
                                    <div class="valid-feedback">
                                        Looks good!
                                    </div>
                                </div>

                                <div class="col-6">
                                    <label for="form-label" for="postalCode" class="">Postal Code:</label>
                                    <input type="text" class="form-control btn-block mb-3" id="postalCode"
                                        name="postalCode" required>
                                    <div class="valid-feedback">
                                        Looks good!
                                    </div>
                                </div>

                                <div class="col-12">
                                    <label for="form-label" class="">State:</label>
                                    <select name="state" id="stateSelect" class="mb-3">
                                        <option value="AB">Alberta</option>
                                        <option value="BC">British Columbia</option>
                                        <option value="MB">Manitoba</option>
                                        <option value="NB">New Brunswick</option>
                                        <option value="NL">Newfoundland and Labrador</option>
                                        <option value="NT">Northwest Territories</option>
                                        <option value="NS">Nova Scotia</option>
                                        <option value="NU">Nunavut</option>
                                        <option value="ON">Ontario</option>
                                        <option value="PE">Prince Edward Island</option>
                                        <option value="QC">Quebec</option>
                                        <option value="SK">Saskatchewan</option>
                                        <option value="YT">Yukon</option>
                                    </select>
                                </div>
                            </div>

                            <div class="col-12">
                                <label for="form-label" class="">Country:</label>
                                <select name="country" id="stateSelect" class="mb-3">
                                    <option value="CA">Canada</option>
                                    <option value="US">United States</option>
                                </select>
                            </div>




                            <br>
                            <!-- <label for="form-label" for="street" class="mb-2">Country:</label>
                        <select name="country" id="">
                            <option value="CA">Canada</option>
                        </select> -->
                        </div>
                        <button class="btn btn-success btn-block">Register</button>
                    </div>
                </div>
            </form>
        </div>


    </div>

</div>
