<% layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/stylesheets/searchLocation.css">

<div class="mx-5 mt-3">
    <h1>Can't decide what to eat?</h1>
    <h4>Don't have to argue anymore of who's turn it is to decide.
        <br> Fill in the details below and we will do the job for
        you.
    </h4>

    <button class="mt-3 btn btn-secondary">
        <a class="text-light" href="/hangry">Back to all locations</a>
    </button>

    <form action="/hangry" class="card mt-5" id="searchForm" method="POST">
        <div class="card-body">
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="location"
                    placeholder="For example: Mississauga, Toronto" required>
            </div>

            <button class="btn btn-block btn-success">Search</button>
        </div>
    </form>

</div>
