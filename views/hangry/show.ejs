<% layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/stylesheets/show.css">


<div class="mt-3">
    <!-- details -->
    <div class="card">
        <div class="row">
            <div class="text-center col-sm-12 col-md-6 col-lg-5">
                <div class="card-body">
                    <h2 class="card-title mb-1">Location: <%=hangry.title%></h2>
                    <!-- <p class="card-text">Type: <%=hangry.entity_type %>
                        <br> Entity Id: <%=hangry.entity_id %>
                    </p>
                    <p class="card-text">City: <%=hangry.city_name%> <br>Id Number: <%= hangry.city_id%></p> -->
                </div>
            </div>

            <div class="col-sm-12 col-md-6 col-lg-7">
                <div class="card mt-3 mx-3 border-3">
                    <div class="container">
                        <div class="card-body">
                            <h3 class="card-title">Filter down your choices below:</h3>
                            <form action="/hangry/<%=hangry._id%>" method="post">
                                <label>Pick a cuisine from <%=hangry.city_name%>: </label>
                                <select class="select btn-block" id="cuisine" name="cuisine_id">
                                    <option value="">Select a Cuisine</option>
                                    <% for (let i = 0; i < hangry.cuisine.length; i++) {  %>
                                    <option value="<%=hangry.cuisine[i].cuisine_id%>">
                                        <%=hangry.cuisine[i].cuisine_name%>
                                    </option>
                                    <% } %>
                                </select>
                                <button class="btn btn-success btn-block">Search</button>
                            </form>
                        </div>
                    </div>
                </div>

            </div>
        </div>


        <br>
        <button class="mt-3 btn btn-secondary">
            <a class="text-light" href="/hangry">Back to all locations</a>
        </button>
    </div>
</div>
