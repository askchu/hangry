<% layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/stylesheets/show.css">



<div class="mt-3 row">
    <!-- details -->
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title mb-1"><%=hangry.title%></h3>
                <p class="card-text">Type: <%=hangry.entity_type %>
                    <br> Entity Id: <%=hangry.entity_id %>
                </p>
                <p class="card-text">City: <%=hangry.city_name%> <br>Id Number: <%= hangry.city_id%></p>




                <form action="/hangry/<%=hangry._id%>" method="post">
                    <label>Pick a cuisine from <%=hangry.city_name%>: </label>
                    <select class="select btn-block w-50" id="cuisine" name="cuisine_name">
                        <option value="">Select a Cuisine</option>
                        <% for (let i = 0; i < hangry.cuisine.length; i++) {  %>
                        <option value="<%=hangry.cuisine[i].cuisine_id%>"><%=hangry.cuisine[i].cuisine_name%></option>
                        <% } %>
                    </select>
                    <button class="btn btn-success btn-block w-50">Search</button>
                </form>


                <br>
                <button class="mt-3 btn btn-secondary">
                    <a class="text-light" href="/hangry">Back to all locations</a>
                </button>
            </div>
        </div>
    </div>
    <!-- picture -->
    <div class="col-4">
    </div>

</div>
