<% layout('layouts/boilerplate') %>
<!-- <link rel="stylesheet" href="/stylesheets/show.css"> -->




<div id="main" class="container my-4 mh-75 text-center">

    <% if(hangryz.length == 0) { %>
    <h2>Sorry, no results found! Filter your search again!</h2>
    <button id="btn" class="text-center mx-auto btn btn-secondary mb-3" type="button">
        <a class="text-light" href="/hangry/<%=hangry._id%>">Back to filter your search</a>
    </button>

    <% } else { %>
    <h2 id="title2" class="pb-3 mt-2 text-center">Search Results in <%=hangry.title%> </h2>
    <button id="btn" class="text-center mx-auto btn btn-secondary mb-3" type="button">
        <a class="text-light" href="/hangry/<%=hangry._id%>">Back to filter your search</a>
    </button>
    <% } %>
    <div class="mx-1 row">


        <%  for (let i = 0; i < hangryz.length; i++) { %>
        <div class="col-md-12 col-lg-4 my-2">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Restaurant Name: <%=hangryz[i].restaurant.name%></h4>
                    <p>Restaurant Picture</p>
                    <p>Locality</p>
                    <p>Rating: </p>
                </div>
            </div>
        </div>
        <% } %>
    </div>
</div>


<!-- <button class="mt-3 btn btn-secondary">
            <a class="text-light" href="/hangry">Back to all locations</a>
        </button> -->
</div>
</div>


